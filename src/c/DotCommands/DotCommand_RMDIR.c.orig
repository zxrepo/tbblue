#include "DotCommandShared.h"

///////////////////////////////////////////////////////////
//
///////////////////////////////////////////////////////////
bool optionHelp = false;
bool optionVerbose = false;
bool optionParent = false;

///////////////////////////////////////////////////////////
//
///////////////////////////////////////////////////////////
bool ProcessOptions(int argc, char **argv)
{
	if (argc == 1)
	{
		optionHelp = true;
	}

	for (uint8_t i = 1; i < argc; ++i)
	{
		char* arg = argv[i];

		if (stricmp(arg, "--help") == 0)
		{
			optionHelp = true;
		}
		else if (stricmp(arg, "-v") == 0 || stricmp(arg, "--verbose") == 0)
		{
			argv[i] = NULL;
			optionVerbose = true;
		} 
		else if (stricmp(arg, "-p") == 0 || stricmp(arg, "--parents") == 0)
		{
			argv[i] = NULL;
			optionParent = true;
		} 
	}

	return !optionHelp;
}

///////////////////////////////////////////////////////////
//
///////////////////////////////////////////////////////////
int main(int argc, char **argv)
{
	bool displayHelp = false;
	uint8_t save_turbo;
	int r;

	IO_NEXTREG_REG = REG_PERIPHERAL_2;
	save_turbo = IO_NEXTREG_DAT;
	IO_NEXTREG_DAT = 2;

	errno = 0;

	if (ProcessOptions(argc, argv))
	{
		for (uint8_t i = 1; i < argc; ++i)
		{
			if (argv[i] != NULL)
			{
				char* path = MakeNicePath(argv[i]);
				while (1)
				{
					if (*path == '.' || *path == 0)
					{
						break;
					}

					if (optionVerbose)
					{
						PrintFormatted("Remove dir '%s'\n", path);
					}

					r = esx_f_rmdir(path);
					if (r != 0)
					{
						PrintErrorMessage(errno);
						break;
					}

					if (!optionParent)
					{
						break;
					}

					path = dirname(path);
				}
			}
		}
	}
	else
	{
		printf("\nSYNOPSIS:\n .RMDIR [OPTION]... DIR...\n");	
		printf("\nOPTIONS:");
    	printf("\n -p, --parents\n  No error if existing, make parent directories as needed\n");
        printf("\n -v, --verbose  Print a message for each created directory\n");
        printf("\n --help  Display this help\n");
	}

	IO_NEXTREG_REG = REG_PERIPHERAL_2;
	IO_NEXTREG_DAT = save_turbo;

	return 0;
}
